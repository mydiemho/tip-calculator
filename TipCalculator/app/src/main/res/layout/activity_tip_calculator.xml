<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}">

    <TextView
        android:id="@+id/tvPeopleCountLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_people_count"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true" />

    <NumberPicker
        android:layout_below="@+id/tvPeopleCountLabel"
        android:id="@+id/npPeopleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/tvPeopleCountLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_input"
        android:id="@+id/tvInputLabel"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/tvPeopleCountLabel"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/etInputAmount"
        android:text=""
        android:hint="@string/label_input_hint"
        android:layout_below="@id/tvInputLabel"
        android:layout_alignStart="@id/tvInputLabel"
        android:numeric="decimal" />

    <RadioGroup
        android:id="@+id/rgTipPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/npPeopleCount"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignStart="@id/tvPeopleCountLabel"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbOkService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_ok_service"
            android:tag="@string/tag_ok_service"/>

        <RadioButton
            android:id="@+id/rbGoodService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_good_service" />

        <RadioButton
            android:id="@+id/rbGreatService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_great_service"
            android:tag="@string/tag_great_service"/>

        <RadioButton
            android:id="@+id/rbOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_other_percentage"
            android:tag="@string/tag_other"/>

        <EditText
            android:id="@+id/etOtherPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:enabled="false"
            android:hint="@string/label_percentage_hint"
            android:layout_toRightOf="@id/tvInputLabel"
            android:layout_alignBaseline="@id/tvInputLabel"
            android:layout_marginLeft="5dp"
            android:numeric="integer" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvTipPerPersonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_tip_per_person"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rgTipPercentage"
        android:layout_alignLeft="@+id/tvTotalTipLabel"
        android:layout_alignStart="@+id/tvTotalTipLabel" />

    <TextView
        android:id="@+id/tvTipPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/tvTotalPerPersonLabel"
        android:layout_toRightOf="@+id/tvTotalPerPersonLabel" />

    <TextView
        android:id="@+id/tvTotalTipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_tip"
        android:textIsSelectable="false"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@id/tvPeopleCountLabel"
        android:layout_below="@id/tvTipPerPersonLabel" />

    <TextView
        android:id="@+id/tvTotalTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignStart="@id/tvTotalBillLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/tvTotalTipLabel"
        android:layout_below="@id/rgTipPercentage"
        android:layout_alignBaseline="@+id/tvTotalTipLabel"        />

    <TextView
        android:id="@+id/tvTotalBillLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_bill"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvTotalTipLabel"
        android:layout_alignLeft="@+id/tvTotalTipLabel"
        android:layout_alignStart="@+id/tvTotalPerPerson" />

    <TextView
        android:id="@+id/tvTotalBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/tvTotalBillLabel"
        android:layout_toRightOf="@+id/tvTotalBillLabel" />

    <TextView
        android:id="@+id/tvTotalPerPersonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_per_person"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvTotalBillLabel"
        android:layout_alignLeft="@+id/tvTotalTipLabel"
        android:layout_alignStart="@+id/tvTotalTipLabel" />

    <TextView
        android:id="@+id/tvTotalPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/tvTotalPerPersonLabel"
        android:layout_toRightOf="@+id/tvTotalPerPersonLabel" />

</RelativeLayout>
