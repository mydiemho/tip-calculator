<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}">

    <TextView
        android:id="@+id/tvPeopleCountLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_people_count"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/etPeopleCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="1"
        android:layout_below="@id/tvPeopleCountLabel"
        android:layout_alignStart="@+id/tvPeopleCountLabel"
        android:numeric="integer" />

    <TextView
        android:id="@+id/tvInputLabel"
        android:text="@string/label_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/tvPeopleCountLabel"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/etInputAmount"
        android:text=""
        android:hint="@string/label_input_hint"
        android:layout_below="@id/tvInputLabel"
        android:layout_alignStart="@id/tvInputLabel"
        android:numeric="integer" />

    <TextView
        android:id="@+id/tvTipPercentageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_tip_percentage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:layout_alignLeft="@id/tvPeopleCountLabel"
        android:layout_below="@id/etPeopleCount" />

    <TextView
        android:id="@+id/tvTipPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@id/tvTipPercentageLabel"
        android:layout_toRightOf="@id/tvTipPercentageLabel" />

    <SeekBar
        android:id="@+id/sbTipPercentage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvTipPercentageLabel"
        android:layout_centerInParent="true"
        android:max="100" />


    <Space
        android:id="@+id/spDivider"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_below="@+id/sbTipPercentage"
        android:layout_toRightOf="@+id/tvBillPerPersonLabel" />

    <TextView
        android:id="@+id/tvTipPerPersonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_tip_per_person"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sbTipPercentage"
        android:layout_alignLeft="@+id/tvPeopleCountLabel" />

    <TextView
        android:id="@+id/tvTipPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_alignBaseline="@id/tvTipPerPersonLabel"
        android:layout_toRightOf="@id/spDivider" />

    <TextView
        android:id="@+id/tvTipTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_tip"
        android:textIsSelectable="false"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@id/tvTipPerPersonLabel"
        android:layout_below="@id/tvTipPerPersonLabel" />

    <TextView
        android:id="@+id/tvTipTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/spDivider"
        android:layout_below="@id/tvTipPerPersonLabel"
        android:layout_alignBaseline="@+id/tvTipTotalLabel"        />

    <TextView
        android:id="@+id/tvBillTotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_bill"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvTipTotalLabel"
        android:layout_alignLeft="@+id/tvTipPerPersonLabel" />

    <TextView
        android:id="@+id/tvBillTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_alignBaseline="@+id/tvBillTotalLabel"
        android:layout_toRightOf="@+id/spDivider" />

    <TextView
        android:id="@+id/tvBillPerPersonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_total_per_person"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvBillTotalLabel"
        android:layout_alignLeft="@+id/tvTipPerPersonLabel" />

    <TextView
        android:id="@+id/tvBillPerPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:layout_alignBaseline="@+id/tvBillPerPersonLabel"
        android:layout_toRightOf="@+id/spDivider" />

</RelativeLayout>
