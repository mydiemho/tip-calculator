<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="${relativePackage}.${activityClass}">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/input_label"
        android:id="@+id/tvInputLabel"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/etInputAmount"
        android:text=""
        android:hint="@string/input_label_hint"
        android:layout_toRightOf="@id/tvInputLabel"
        android:layout_alignBottom="@id/tvInputLabel"
        android:layout_marginLeft="5dp"
        android:numeric="decimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_label_ok_service"
        android:id="@+id/btnOkService"
        android:tag="@string/tag_ok_service"
        android:onClick="calculateTip"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etInputAmount"
        android:layout_toLeftOf="@+id/btnGoodService" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_label_good_service"
        android:id="@+id/btnGoodService"
        android:tag="@string/tag_good_service"
        android:onClick="calculateTip"
        android:layout_alignTop="@+id/btnOkService"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_label_great_service"
        android:id="@+id/btnGreatService"
        android:tag="@string/tag_great_service"
        android:onClick="calculateTip"
        android:layout_alignTop="@+id/btnOkService"
        android:layout_below="@+id/etInputAmount"
        android:layout_toRightOf="@+id/btnGoodService" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/tvTipPercentageLabel"
        android:text=""
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnGoodService"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/sbTipPercentage"
        android:max="100"
        android:layout_alignLeft="@id/btnOkService"
        android:layout_below="@+id/tvTipPercentageLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total_label"
        android:id="@+id/tvTotalAmountLabel"
        android:layout_below="@id/sbTipPercentage"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/tvInputLabel"
        android:layout_alignStart="@+id/tvInputLabel" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:padding="20dp"
        android:id="@+id/tvTotalAmount"
        android:layout_alignBaseline="@+id/tvTotalAmountLabel"
        android:layout_toRightOf="@+id/tvTotalAmountLabel"
        android:layout_alignLeft="@+id/btnGoodService" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tip_label"
        android:id="@+id/tvTipAmountLabel"
        android:textIsSelectable="false"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvTotalAmountLabel"
        android:layout_alignStart="@+id/tvInputLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="20dp"
        android:id="@+id/tvTipAmount"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/tvTipAmountLabel"
        android:layout_below="@id/tvTotalAmount"
        android:layout_alignStart="@+id/tvTotalAmount"
        android:layout_alignBaseline="@+id/tvTipAmountLabel"        />

</RelativeLayout>
